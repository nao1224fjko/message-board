
<%= form_for(@message, html: { class: "form-horizontal" }) do |f| %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                <li><%= full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <div class="form-group">
        <label for="message_name" class="col-sm-2 col-md-offset-4 control-label">名前:</label>
        <div class="col-sm-6">
            <%= f.text_field :name, class: "form-control"  %>
        </div>
    </div>
    
    <div class="form-group">
        <label for="message_body" class="col-sm-2 col-md-offset-4 control-label">内容:</label>
        <div class="col-sm-6">
            <%= f.text_area :body , class: "form-control" , rows:"6" %>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-6 col-md-offset-6">
            <%= f.submit class: "btn btn-md btn-info" %>
        </div>
    </div>
<% end %>
